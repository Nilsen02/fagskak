<div id="info"></div>
<div class="form-group">
    <div class="col-lg-10"><input id="name" class="form-control" value="{{display_name}}"/></div>
    <label class="col-lg-2 control-label"><button id="update_name" class="btn">Update Name</button></label>
</div>


<script src="/js/BootstrapAlert.js" type="text/javascript"></script>
<script type="text/javascript">
    var info = new BootstrapAlert("info", {
        modifiers: {
            danger: {
                hide: 15000
            },
            success: {
                hide: 5000
            }
        }
    });

    $("#update_name").on("click", function () {
        $.ajax({
            type: "Get",
            url: "/users/update_name",
            data: {name: $("#name").val()},
            success: function (response) {
                info.success("Username updated")
            },
            error: function (response) {
                info.danger("A problem occured while changing username")
            }
        });
    });




</script>
